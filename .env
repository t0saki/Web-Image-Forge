# Database configuration
POSTGRES_USER=image_optimizer
POSTGRES_PASSWORD=some_password_for_image_optimizer
POSTGRES_DB=image_optimizer
DB_PORT=5432

# App configuration
APP_PORT=54321
APP_WORKERS=2

# Worker configuration
WORKER_REPLICAS=1
WORKER_THREADS=2
POLL_INTERVAL=1

# Image conversion settings
STORAGE_PATH=/app/images
WEBP_QUALITY=80
WEBP_METHOD=4
AVIF_QUALITY=65
AVIF_SPEED=6
MAX_PIXELS=8294400

# Domain whitelist settings (comma-separated, leave empty to allow all domains)
DOMAIN_WHITELIST=bed.example.com

# API Security
API_KEY=your_secure_api_key_here